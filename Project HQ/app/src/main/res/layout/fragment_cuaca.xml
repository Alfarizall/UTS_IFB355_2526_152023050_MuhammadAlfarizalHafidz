<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp" android:background="@color/background">

    <ImageView android:id="@+id/iv_weather" android:layout_width="120dp" android:layout_height="120dp" android:layout_gravity="center"/>
    <TextView android:id="@+id/tv_temp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="32sp" android:layout_marginTop="8dp"/>
    <TextView android:id="@+id/tv_condition" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--"/>
    <TextView android:id="@+id/tv_humidity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--"/>
</LinearLayout>
